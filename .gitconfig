[user]
	name = Jonathan Lestrelin
	email = jonathan.lestrelin@gmail.com

[core]
	pager = cat
	whitespace=fix,trailing-space,tabwidth=4

[merge]
	tool = vimdiff

[alias]
	cp = 'cherry-pick'
	st = 'status -sb'
	cl = 'clone'
	ci = 'commit'
	co = 'checkout'
	br = 'branch'
	dc = 'diff --cached'
	lg = "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all"
	last ='git log -1 --stat'
	unstage ='reset HEAD --'

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
	pager = true

[color "diff"]
	meta = cyan
	frag = yellow
	old = red
	new = green

[color "status"]
	added = cyan
	changed = green
	untracked = magenta

# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Mod4 = Windows
# Used for manipulating objects
set $mod Mod4

# Mod1 = Alt
# Used for moving focus
set $mod2 Mod1

set $terminal gnome-terminal

# Cheat sheets
# Mod1: http://www.keyboard-layout-editor.com/#/layouts/8692cac33657fff5179a2bfc385dc2b3
# Mod2: http://www.keyboard-layout-editor.com/#/layouts/b38667ae3911b3fd8beda4ae355f2b96

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:DejaVu Sans Mono 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $terminal

# kill focused window
bindsym $mod+q kill

# start dmenu for running commands
bindsym $mod+c exec dmenu_run
# start dmenu for running desktop files
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# move focused window
bindsym $mod+Left move left
bindsym $mod+Down move down
bindsym $mod+Up move up
bindsym $mod+Right move right

# change focus
bindsym $mod2+Left focus left
bindsym $mod2+Down focus down
bindsym $mod2+Up focus up
bindsym $mod2+Right focus right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
#bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+s layout toggle split

# toggle tiling / floating
bindsym $mod+space floating toggle

# change focus between tiling / floating windows
bindsym $mod2+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# move focused container to workspace
bindsym $mod+KP_1 move container to workspace 1
bindsym $mod+KP_2 move container to workspace 2
bindsym $mod+KP_3 move container to workspace 3
bindsym $mod+KP_4 move container to workspace 4
bindsym $mod+KP_5 move container to workspace 5
bindsym $mod+KP_6 move container to workspace 6
bindsym $mod+KP_7 move container to workspace 7
bindsym $mod+KP_8 move container to workspace 8
bindsym $mod+KP_9 move container to workspace 9
bindsym $mod+KP_0 move container to workspace 10

# switch to workspace
bindsym $mod2+KP_1 workspace 1
bindsym $mod2+KP_2 workspace 2
bindsym $mod2+KP_3 workspace 3
bindsym $mod2+KP_4 workspace 4
bindsym $mod2+KP_5 workspace 5
bindsym $mod2+KP_6 workspace 6
bindsym $mod2+KP_7 workspace 7
bindsym $mod2+KP_8 workspace 8
bindsym $mod2+KP_9 workspace 9
bindsym $mod2+KP_0 workspace 10

# reload the configuration file
bindsym $mod2+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod2+r restart
# exit i3 (logs you out of your X session)
bindsym $mod2+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

mode "exec" {
	# mode for launching applications/commands
	bindsym f exec "firefox"
	bindsym h exec "firefox -P Home --new-instance"
	bindsym p exec "firefox --private-window"
	bindsym t exec "thunderbird"
	bindsym g exec "gedit"
	bindsym v exec "$terminal -e vim"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+e mode "exec"
bindsym $mod+l exec "i3lock -f -t -i /home/jonathan/.cache/wall.png"


# right click on titlebar toggles between floating / tiling modes
bindsym button3 floating toggle
bindsym button2 kill


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
	position bottom
	output DP1
	tray_output primary
	font pango:DejaVu Sans Mono 10
	colors {
		background #0088cc
		statusline #ffffff
	}
}
